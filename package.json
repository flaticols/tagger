{
  "name": "tagger",
  "version": "0.1.0",
  "private": true,
  "description": "Creating a new release using the labels from the Pul Requests",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "NODE_OPTIONS=--openssl-legacy-provider  ncc build ./lib/main.js -o dist/main --source-map --license licenses.txt",
    "setup-package": "NODE_OPTIONS=--openssl-legacy-provider  ncc build ./lib/setup.js -o dist/setup --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm run setup-package  && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flaticols/tagger.git"
  },
  "keywords": [
    "actions",
    "tags"
  ],
  "author": "Denis Panfilov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/openapi-types": "^14.0.0",
    "@octokit/rest": "^19.0.5"
  },
  "devDependencies": {


    "@typescript-eslint/parser": "^5.45.1",
    "@types/node": "^18.11.10",

    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.28.0",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.1.6",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.9.3"
  }
}
